<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityChat" 
    android:background="@drawable/bg_offre">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageoff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/nomoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="19dp"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="17dp"
             android:layout_marginLeft="5sp" 
            android:textColor="#ffffff"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_weight="0.30"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prix"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prixoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textSize="17dp"
                android:textStyle="bold|italic"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_weight="0.30"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delaisOffre"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="5sp" />

            <TextView
                android:id="@+id/delaisoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textStyle="bold" 
                android:textColor="#ffffff"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnreserver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_weight="0.36"
            android:text="@string/reserver"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="72dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp" />
    </LinearLayout>

</ScrollView>