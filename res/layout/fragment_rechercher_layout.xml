<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="26dp"
            android:layout_toLeftOf="@+id/imageView2"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/lg" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textViewdis"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="@string/chercher_disponibilit_"
        android:textColor="#0F357E"
        android:textStyle="bold"
        android:textSize="16dp" />

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="275dp"
        android:layout_height="261dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/linearlayout_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewgd"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
           android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/veuillez_entrer_vos_dates"
            android:textColor="#0F357E"
            android:textSize="16dp" />

        <RadioButton
            android:id="@+id/radioButtonChambre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radiobuttonch"
            android:textColor="#0F357E"
            android:checked="true"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/bdateArrivee"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_blanc"
            android:drawableRight="@drawable/ic_date"
            android:hint="@string/dateArrivee"
            android:textColor="#0F357E" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/bdateDepart"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_blanc"
            android:drawableRight="@drawable/ic_date"
            android:hint="@string/dateDepart"
            android:textColor="#0F357E" />

        <RadioButton
            android:id="@+id/radioButtonSalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radiobuttonsl"
            android:textColor="#0F357E"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/bjourReserv"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_blanc"
            android:drawableRight="@drawable/ic_date"
            android:hint="@string/jourreserv"
            android:textColor="#0F357E" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="128dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bouton_bg"
            android:drawableRight="@drawable/loop"
            android:text="@string/clickhere"
            android:textColor="#0F357E" />
    </RadioGroup>

</LinearLayout>