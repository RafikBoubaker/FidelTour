<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewVlid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/validation"
        android:textColor="#0F357E"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="284dp"
        android:layout_height="128dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_blanc_transpmoyen"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewInfo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/textviewinf"
            android:textColor="#0F357E"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/adrMail"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_blanc"
            android:ems="10"
            android:hint="@string/email"
            android:textColor="#0F357E" />

        <EditText
            android:id="@+id/Motdepasse"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_blanc"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="@string/motdepasse"
            android:textColor="#0F357E" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonconnecter"
        android:layout_width="120dp"
        android:layout_height="29dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bouton_bg"
        android:text="@string/buttonconnecter"
        android:textColor="#0F357E" />

    <LinearLayout
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="0.22"
        android:background="@drawable/bg_blanc_transpmoyen"
        android:orientation="vertical"
        android:padding="2dp" >

        <TextView
            android:id="@+id/textViewInfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/nouveautilisateur"
            android:textColor="#0F357E"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/editTextCIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_blanc"
            android:ems="10"
            android:hint="@string/cin"
            android:textColor="#0F357E" />

        <EditText
            android:id="@+id/editTextNom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_blanc"
            android:ems="10"
            android:hint="@string/nom"
            android:textColor="#0F357E" />

        <EditText
            android:id="@+id/editTextPrenom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_blanc"
            android:ems="10"
            android:hint="@string/prenom"
            android:textColor="#0F357E" />

        <EditText
            android:id="@+id/editTextMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_blanc"
            android:ems="10"
            android:hint="@string/email"
            android:textColor="#0F357E" />
    </LinearLayout>

    <Button
        android:id="@+id/buttoncontinuer"
        android:layout_width="120dp"
        android:layout_height="29dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bouton_bg"
        android:text="@string/buttonvalider"
        android:textColor="#0F357E" />

</LinearLayout>